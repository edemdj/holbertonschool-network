#!/usr/bin/env bash
# Add or modify the entry for localhost
echo "Configuring localhost to resolve to 127.0.0.2"
sudo sed -i '/127.0.0.1\s*localhost/ c\127.0.0.2\tlocalhost' /etc/hosts

# Add entry for facebook.com to resolve to 8.8.8.8
echo "Configuring facebook.com to resolve to 8.8.8.8"
echo "8.8.8.8\tfacebook.com" | sudo tee -a /etc/hosts > /dev/null

# Verify the changes
echo "Here are the updated contents of the /etc/hosts file:"
cat /etc/hosts
